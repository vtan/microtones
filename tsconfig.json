{
  "compilerOptions": {
    // Project options
    "target": "es2015",
    "module": "commonjs",
    "lib": [ "ES2019", "DOM" ],
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,

    // Module resolution
    "baseUrl": ".",

    // Strict checks
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,

    // Linter checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*"
  ]
}
